    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Caustics",
            "type": "cppdbg", // "cppvsdbg" for windows
            "request": "launch",
            // Resolved by CMake Tools:
            "program": "${command:cmake.launchTargetPath}",
            
            "args": ["${workspaceFolder}/scenes/caustics.json"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",//"${command:cmake.getLaunchTargetDirectory}",
            "externalConsole": false,
            "MIMode": "gdb"
        }
    ]
}